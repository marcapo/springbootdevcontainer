{
	"name": "Java",
	"image": "mcr.microsoft.com/devcontainers/java:1-17-bookworm",

	"features": {
		"ghcr.io/devcontainers/features/java:1": {
			"version": "17",
			"installMaven": "true",
			"installGradle": "true"
		}
	},

	"customizations": {
		"vscode": {
		  "extensions": ["mongodb.mongodb-vscode"]
		}
	},
	
	"runArgs": [
		"--network=host"
	],

	"remoteUser": "root"
}
